#include<stdio.h>
#include<math.h>
int main()
{
    int i,j,n,min,max,avg,t,s;
    printf("Enter leghth of array\n");
    scanf("%d",&n);
    printf("Enter values of array\n");
    int a[n];
    for(i=0;i<n;i++)
     scanf("%d",&a[i]);
    min=a[0];
    max=a[0];
    s=0;
    for(i=0;i<n;i++)
    {
     if(a[i]<min)
      min=a[i];
     if(a[i]>max)
      max=a[i];
     s=s+a[i];
    }
    avg=s/n;
    printf("The minimum & maximum value in the array are %d & %d\n",min,max);
    printf("The average of the elements of the array is %d", avg);
    return 0;
}
